<?xml version="1.0" encoding="utf-8"?>

<objects>
	<script file="gui/common/functions_civinfo.js"/>
	<script file="gui/common/functions_global_object.js"/>
	<script file="gui/common/functions_utility.js"/>
	<script file="gui/civselect/helpers.js"/>
	<script file="gui/civselect/civselect.js"/>

	<!-- Add a translucent black background to fade out the match page -->
	<object type="image" z="0" sprite="bkTranslucent"/>

	<object type="image" style="ModernDialog" size="50%-488 50%-360 50%+488 50%+360">

		<object style="TitleText" type="text" size="50%-128 -18 50%+128 14">
			<translatableAttribute id="caption">Civilization Selection</translatableAttribute>
		</object>

		<object size="16 32 70%-8 100%-32">
			
			<!-- grouping selection -->
			<object size="50% 0 100% 40">
				<object
					name="groupSelectionHeading"
					type="text"
					font="sans-bold-16"
					textcolor="white"
					text_align="right"
					size="0 2 100%-164 32">
					<translatableAttribute id="caption">Group by:</translatableAttribute>
				</object>
	
				<object name="groupSelection" type="dropdown" style="ModernDropDown" size="100%-160 0 100% 26">
					<translatableAttribute id="tooltip">Choose how to group civs</translatableAttribute>
					<action on="SelectionChange">/*selectCiv(this.list_data[this.selected]);*/</action>
				</object>
			</object>
			
			<!-- draw space -->
			<object sprite="ModernDarkBoxGold" type="image" size="0 40 100% 100%">
				
				<repeat count="16" var="em">
					<object name="emblem[em]" size="4 8 4+96 8+96">
						<object type="image" style="EmblemImage" name="emblem[em]_img"/>
						<object type="button" style="EmblemButton" name="emblem[em]_btn"/>
					</object>
				</repeat>
				
			</object>
		</object>

		<object sprite="ModernDarkBoxGold" type="image" size="70%+8 32 100%-16 100%-54">
			
			<!-- Selection Details -->
			<object
				name="selectedCiv_heading"
				type="text"
				font="sans-bold-24"
				textcolor="white"
				text_align="center"
				size="0 12 100% 40"
			/>
			
			<object size="8 48 100%-8 100%-8" type="image" sprite="ModernDarkBoxGold">
				<object
					name="selectedCiv_history"
					type="text"
					font="sans-14"
					textcolor="white"
					text_align="center"
					size="4 4 100%-4 100%-4"
				/>
			</object>
			
		</object>

		<!-- Close the dialog -->
		<object
			type="button"
			style="StoneButton"
			size="70%+8 100%-44 85%-8 100%-16"
		>
			<translatableAttribute id="caption">Cancel</translatableAttribute>
			<action on="Press">
				<![CDATA[
					Engine.PopGuiPage();
				]]>
			</action>
		</object>

		<object
			type="button"
			style="StoneButton"
			size="85% 100%-44 100%-16 100%-16"
		>
			<translatableAttribute id="caption">Select</translatableAttribute>
			<action on="Press">
				<![CDATA[
					Engine.PopGuiPageCB({
						"player": g_player,
						"civ": g_selected
					});
				]]>
			</action>
		</object>

	</object>

</objects>
